PORT=4000
# Base64-encoded 64-byte Ed25519 private key (seed + public key) used by the backend signer.
# Do NOT commit real keys; set this locally.
ADMIN_PRIVATE_KEY_BASE64=REPLACE_WITH_BASE64_SECRET
# Base64 public key (must match AdminConfig on-chain)
ADMIN_PUBLIC_KEY_BASE64=REPLACE_WITH_BASE64_PUBLIC

# Walrus (testnet public endpoints by default)
WALRUS_AGGREGATOR_URL=https://aggregator.walrus-testnet.walrus.space
WALRUS_PUBLISHER_URL=https://publisher.walrus-testnet.walrus.space
WALRUS_EPOCHS=5
WALRUS_DELETABLE=true
# Public publishers often cap uploads around 10MiB; stay under this.
WALRUS_MAX_UPLOAD_BYTES=10485760
WALRUS_REQUEST_TIMEOUT_MS=10000
WALRUS_RETRY_COUNT=2
# (optional) seed for counters snapshot; leave empty to start fresh
WALRUS_COUNTERS_BLOB_ID=
# (optional) seed for websites snapshot
WALRUS_WEBSITES_BLOB_ID=
# (optional) seed for campaigns snapshot
WALRUS_CAMPAIGNS_BLOB_ID=


